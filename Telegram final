<script>
// Inicializaci√≥n de Telegram WebApp
const tg = window.Telegram?.WebApp;
if(tg){tg.ready();tg.expand();}

let destino='', precio='', fotoBase64='';

// L√≥gica de selecci√≥n visual
function selectDest(el, val){
  document.querySelectorAll('.card-btn:not(.price-btn)').forEach(b=>b.classList.remove('selected'));
  el.classList.add('selected');
  destino=val;
}

function selectPrice(el, val){
  document.querySelectorAll('.price-btn').forEach(b=>b.classList.remove('selected'));
  el.classList.add('selected');
  precio=val;
}

// ‚ö° L√≥gica de Compresi√≥n de Imagen (Fundamental para la velocidad)
function handlePhoto(input){
  const file = input.files[0];
  if(!file) return;

  const reader = new FileReader();
  reader.onload = function(e){
    const img = new Image();
    img.onload = function(){
      // Redimensionar la imagen para no colapsar la app de Telegram
      const canvas = document.createElement('canvas');
      const MAX_WIDTH = 600; // Ancho m√°ximo optimizado
      const scaleSize = MAX_WIDTH / img.width;
      
      canvas.width = MAX_WIDTH;
      canvas.height = img.height * scaleSize;
      
      const ctx = canvas.getContext('2d');
      ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
      
      // Exportar como JPEG de calidad media (muy ligero)
      fotoBase64 = canvas.toDataURL('image/jpeg', 0.6);
      
      // Mostrar en la UI
      document.getElementById('preview-img').src = fotoBase64;
      document.getElementById('uploadArea').style.display = 'none';
      document.getElementById('preview-box').style.display = 'block';
    }
    img.src = e.target.result;
  };
  reader.readAsDataURL(file);
}

function changePhoto(){
  fotoBase64='';
  document.getElementById('photoInput').value='';
  document.getElementById('preview-box').style.display='none';
  document.getElementById('uploadArea').style.display='block';
}

function enviar(){
  if(!destino){ tg?.showAlert('Por favor, selecciona un destino.'); return; }
  if(!precio){ tg?.showAlert('Por favor, selecciona una tarifa.'); return; }
  if(!fotoBase64){ tg?.showAlert('El documento de identidad es obligatorio.'); return; }

  const data = JSON.stringify({destino, precio, foto: fotoBase64});

  if(tg && tg.initData){
    try {
      tg.sendData(data);
    } catch(err) {
      console.error(err);
      tg.showAlert("La imagen es muy grande para enviarse por este medio. Intenta una foto de menor resoluci√≥n.");
    }
  } else {
    alert(`Reserva confirmada!\nDestino: ${destino}\nPrecio: ${precio} FCFA`);
  }
}
</script>
